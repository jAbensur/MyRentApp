<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        
        <variable
            name="propertyModel"
            type="com.myapplication.model.PropertyModel" />
        
        <variable
            name="listener"
            type="com.myapplication.onClickInterface.OnClickItemInterfaceProperty" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"

        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <View
            android:id="@+id/view"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_alignParentStart="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp">


            <TextView
                android:id="@+id/txtPName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:text="@{propertyModel.nameP ,default=Property}"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPName"
                android:layout_alignStart="@+id/txtPName"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/imgEdit"
                android:drawablePadding="5dp"
                android:text="@{propertyModel.description  ,default=Description}"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableTint="#000000" />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDescription"
                android:layout_alignStart="@+id/txtDescription"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:drawablePadding="10dp"
                android:text="@{propertyModel.address ,default=Address}"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableTint="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAddress"
                android:layout_alignStart="@+id/txtAddress"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="5dp"
                android:text='@{propertyModel.state == 1 ? "Activo" : "Inactivo"}'
                android:textSize="15dp"
                android:textStyle="bold"
                app:drawableTint="#000000" />

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="10dp"
                android:onClick="@{()->listener.onClickItem(propertyModel,false)}"
                android:src="@drawable/ic_delete"
                app:tint="#000000" />

            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgDelete"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="10dp"
                android:onClick="@{()->listener.onClickItem(propertyModel,true)}"
                android:src="@drawable/ic_edit"
                app:tint="#000000" />

            <ImageView
                android:id="@+id/imgDisabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgEdit"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="10dp"
                android:onClick="@{()->listener.onClickItemDeactive(propertyModel)}"
                android:src="@drawable/ic_disabled"
                app:tint="#000000" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>